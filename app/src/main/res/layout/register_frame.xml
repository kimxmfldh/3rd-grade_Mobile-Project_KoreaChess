<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerframe"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/h"
        android:layout_width="match_parent"
        android:layout_height="321.5dp"
        android:gravity="center|center_horizontal|top"
        android:textAllCaps="false"
        android:textSize="80sp"
        android:textStyle="normal|bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="105dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/registerName"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="이름을 입력하세요."
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/reigsterNickName"
                android:layout_width="240dp"
                android:layout_height="47.5dp"
                android:ems="10"
                android:hint="닉네임을 입력하세요."
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/registerEmail"
                android:layout_width="240dp"
                android:layout_height="48.5dp"
                android:ems="10"
                android:hint="email을 입력하세요"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/registerPassoword"
                android:layout_width="240dp"
                android:layout_height="47.5dp"
                android:ems="10"
                android:hint="password를 입력하세요"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="61dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/register"
            android:layout_width="133dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:text="등록"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="13dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/cancle"
            android:layout_width="133dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
